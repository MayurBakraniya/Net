@model IEnumerable<MVCdbdemo.model>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @using (Html.BeginForm())
    {
        <b>Search by</b>
        @Html.RadioButton("searchby","Model",true) <b>Model</b>
        @Html.RadioButton("searchby","Company") <b>Company</b>
        <br />
        @Html.TextBox("search") <input type="submit" name="search" value="search" />
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.modelName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.company.companyName)
        </th>
        <th></th>
    </tr>

@if(Model.Count() == 0)
{
    <tr>
        <td colspan="3">No records Found</td>
    </tr>
}

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.modelName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.company.companyName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.modelID }) |
            @Html.ActionLink("Details", "Details", new { id=item.modelID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.modelID })
        </td>
    </tr>
}

</table>
