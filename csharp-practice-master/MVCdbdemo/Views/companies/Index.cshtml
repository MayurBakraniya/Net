@model IEnumerable<MVCdbdemo.company>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @using (Html.BeginForm())
    {
        <b>Search by</b>
        @Html.RadioButton("searchby", "Company ID", true) <b>Company ID</b>
        @Html.RadioButton("searchby", "Company Name") <b>Company Name</b>
        <br />
        @Html.TextBox("search") <input type="submit" name="search" value="search" />
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.companyName)
        </th>
        <th></th>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="2">No records Found</td>
        </tr>
    }

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.companyName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.companyID }) |
                @Html.ActionLink("Details", "Details", new { id = item.companyID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.companyID })
            </td>
        </tr>
    }

</table>
